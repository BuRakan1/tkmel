    def go_to_page(self, page):
        """Ø§Ù„Ø§Ù†ØªÙ‚Ø§Ù„ Ø¥Ù„Ù‰ ØµÙØ­Ø© Ù…Ø­Ø¯Ø¯Ø©"""
        if 1 <= page <= self.total_pages:
            self.current_page = page
            self.display_current_page()

    def display_current_page(self):
        """Ø¹Ø±Ø¶ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª ÙÙŠ Ø§Ù„ØµÙØ­Ø© Ø§Ù„Ø­Ø§Ù„ÙŠØ©"""
        # Ù…Ø³Ø­ Ø§Ù„Ø´Ø¬Ø±Ø©
        for item in self.alerts_tree.get_children():
            self.alerts_tree.delete(item)

        # Ø­Ø³Ø§Ø¨ Ù†Ø·Ø§Ù‚ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ù„Ù„ØµÙØ­Ø© Ø§Ù„Ø­Ø§Ù„ÙŠØ©
        start_index = (self.current_page - 1) * self.items_per_page
        end_index = min(start_index + self.items_per_page, len(self.filtered_data))

        # Ø¹Ø±Ø¶ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª
        for i in range(start_index, end_index):
            alert = self.filtered_data[i]

            # ØªØ­Ø¯ÙŠØ¯ ÙƒÙŠÙÙŠØ© Ø¹Ø±Ø¶ Ø§Ù„Ø­Ø¯ÙˆØ¯ Ù„Ù„Ø¯ÙˆØ±Ø§Øª Ø§Ù„Ø®Ø§ØµØ©
            without_display = f"{alert['without_excuse']}/{alert['max_without']}"
            with_display = f"{alert['with_excuse']}/{alert['max_with']}"

            # Ù„Ù„Ø¯ÙˆØ±Ø§Øª Ø§Ù„ØªÙŠ Ù„Ø§ ØªØ³Ù…Ø­ Ø¨Ø£ÙŠ ØºÙŠØ§Ø¨
            if alert['max_without'] == 0 and alert['max_with'] == 0:
                without_display = f"{alert['without_excuse']}/ØºÙŠØ± Ù…Ø³Ù…ÙˆØ­"
                with_display = f"{alert['with_excuse']}/ØºÙŠØ± Ù…Ø³Ù…ÙˆØ­"
            elif alert['max_without'] == 0:
                without_display = f"{alert['without_excuse']}/ØºÙŠØ± Ù…Ø³Ù…ÙˆØ­"

            self.alerts_tree.insert(
                "",
                tk.END,
                text=str(i + 1),
                values=(
                    alert['course'],
                    alert['student_name'],
                    alert['rank'],
                    without_display,
                    with_display,
                    alert['total'],
                    alert['status'],
                    f"{alert['percentage']:.1f}%",
                    alert['category']
                ),
                tags=(alert['tag'],)
            )

        # ØªØ­Ø¯ÙŠØ« Ø¹Ù†Ø§ØµØ± Ø§Ù„ØªØ­ÙƒÙ… ÙÙŠ Ø§Ù„ØªØµÙØ­
        self.create_pagination_controls()

    def determine_course_category(self, duration_days):
        """ØªØ­Ø¯ÙŠØ¯ Ù…Ø¯Ø© Ø§Ù„Ø¯ÙˆØ±Ø© ÙˆØ­Ø¯ÙˆØ¯ Ø§Ù„ØºÙŠØ§Ø¨ Ø§Ù„Ù…Ø³Ù…ÙˆØ­"""
        if duration_days >= 85:  # 3 Ø£Ø´Ù‡Ø± Ø£Ùˆ Ø£ÙƒØ«Ø±
            return "3 Ø£Ø´Ù‡Ø± Ø£Ùˆ Ø£ÙƒØ«Ø±", 4, 8
        elif duration_days >= 55:  # Ø´Ù‡Ø±ÙŠÙ†
            return "Ø´Ù‡Ø±ÙŠÙ†", 2, 4
        elif duration_days >= 25:  # Ø´Ù‡Ø±
            return "Ø´Ù‡Ø± ÙˆØ§Ø­Ø¯", 1, 2
        elif duration_days >= 19:  # 3 Ø£Ø³Ø§Ø¨ÙŠØ¹
            return "3 Ø£Ø³Ø§Ø¨ÙŠØ¹", 1, 2
        elif duration_days >= 11:  # Ø£Ø³Ø¨ÙˆØ¹ÙŠÙ† (11-18 ÙŠÙˆÙ…)
            return "Ø£Ø³Ø¨ÙˆØ¹ÙŠÙ†", 0, 1  # ØºÙŠØ§Ø¨ Ø¨Ø¯ÙˆÙ† Ø¹Ø°Ø± ØºÙŠØ± Ù…Ø³Ù…ÙˆØ­ØŒ Ø¨Ø¹Ø°Ø± ÙŠÙˆÙ… ÙˆØ§Ø­Ø¯
        else:  # Ø£Ù‚Ù„ Ù…Ù† Ø£Ø³Ø¨ÙˆØ¹ÙŠÙ† (10 Ø£ÙŠØ§Ù… Ø£Ùˆ Ø£Ù‚Ù„)
            return "Ø£Ù‚Ù„ Ù…Ù† Ø£Ø³Ø¨ÙˆØ¹ÙŠÙ† (10 Ø£ÙŠØ§Ù… Ø£Ùˆ Ø£Ù‚Ù„)", 0, 0  # Ù„Ø§ ÙŠØ³Ù…Ø­ Ø¨Ø£ÙŠ ØºÙŠØ§Ø¨

    def calculate_actual_absence_days(self, student_id, course_name):
        """Ø­Ø³Ø§Ø¨ Ø£ÙŠØ§Ù… Ø§Ù„ØºÙŠØ§Ø¨ Ø§Ù„ÙØ¹Ù„ÙŠØ© Ù…Ø¹ Ù‚Ø§Ø¹Ø¯Ø© Ø§Ù„Ø®Ù…ÙŠØ³-Ø§Ù„Ø£Ø­Ø¯"""
        cursor = self.conn.cursor()

        # Ø§Ù„Ø­ØµÙˆÙ„ Ø¹Ù„Ù‰ Ø¬Ù…ÙŠØ¹ Ø³Ø¬Ù„Ø§Øª Ø§Ù„ØºÙŠØ§Ø¨ Ù„Ù„Ù…ØªØ¯Ø±Ø¨

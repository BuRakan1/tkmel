# Ø¯Ø§Ù„Ø© Ù„Ù„ØªØ­Ù‚Ù‚ Ù…Ù† ÙƒÙ„Ù…Ø© Ø§Ù„Ù…Ø±ÙˆØ±
def verify_password(parent, colors, fonts):
    """Ù†Ø§ÙØ°Ø© Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† ÙƒÙ„Ù…Ø© Ø§Ù„Ù…Ø±ÙˆØ±"""
    password_window = tk.Toplevel(parent)
    password_window.title("Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø§Ù„Ù‡ÙˆÙŠØ©")
    password_window.geometry("400x200")
    password_window.configure(bg=colors["light"])
    password_window.grab_set()

    # ØªÙˆØ³ÙŠØ· Ø§Ù„Ù†Ø§ÙØ°Ø©
    x = (password_window.winfo_screenwidth() - 400) // 2
    y = (password_window.winfo_screenheight() - 200) // 2
    password_window.geometry(f"400x200+{x}+{y}")

    # Ø§Ù„Ø¹Ù†ÙˆØ§Ù†
    tk.Label(
        password_window,
        text="Ø§Ù„Ø±Ø¬Ø§Ø¡ Ø¥Ø¯Ø®Ø§Ù„ ÙƒÙ„Ù…Ø© Ø§Ù„Ù…Ø±ÙˆØ±",
        font=fonts["subtitle"],
        bg=colors["light"],
        fg=colors["dark"]
    ).pack(pady=20)

    # Ø¥Ø¯Ø®Ø§Ù„ ÙƒÙ„Ù…Ø© Ø§Ù„Ù…Ø±ÙˆØ±
    password_var = tk.StringVar()
    password_entry = tk.Entry(
        password_window,
        textvariable=password_var,
        font=fonts["text"],
        show="*",
        width=20,
        justify=tk.CENTER
    )
    password_entry.pack(pady=10)
    password_entry.focus()

    result = {'success': False}

    def check_password():
        if password_var.get() == "123456":
            result['success'] = True
            password_window.destroy()
        else:
            messagebox.showerror("Ø®Ø·Ø£", "ÙƒÙ„Ù…Ø© Ø§Ù„Ù…Ø±ÙˆØ± ØºÙŠØ± ØµØ­ÙŠØ­Ø©", parent=password_window)
            password_entry.delete(0, tk.END)
            password_entry.focus()

    def on_enter(event):
        check_password()

    password_entry.bind('<Return>', on_enter)

    # Ø¥Ø·Ø§Ø± Ø§Ù„Ø£Ø²Ø±Ø§Ø±
    button_frame = tk.Frame(password_window, bg=colors["light"])
    button_frame.pack(pady=20)

    tk.Button(
        button_frame,
        text="ØªØ£ÙƒÙŠØ¯",
        font=fonts["text_bold"],
        bg=colors["success"],
        fg="white",
        padx=20,
        pady=5,
        bd=0,
        relief=tk.FLAT,
        cursor="hand2",
        command=check_password
    ).pack(side=tk.LEFT, padx=5)

    tk.Button(
        button_frame,
        text="Ø¥Ù„ØºØ§Ø¡",
        font=fonts["text_bold"],
        bg=colors["danger"],
        fg="white",
        padx=20,
        pady=5,
        bd=0,
        relief=tk.FLAT,
        cursor="hand2",
        command=password_window.destroy
    ).pack(side=tk.LEFT, padx=5)

    # Ø§Ù†ØªØ¸Ø§Ø± Ø¥ØºÙ„Ø§Ù‚ Ø§Ù„Ù†Ø§ÙØ°Ø©
    password_window.wait_window()

    return result['success']



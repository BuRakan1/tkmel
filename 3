        self.total_pages = math.ceil(len(self.filtered_data) / self.items_per_page) if self.filtered_data else 1
        self.current_page = 1

        # Ø¹Ø±Ø¶ Ø§Ù„Ù†ØªØ§Ø¦Ø¬
        self.display_current_page()


    def filter_alerts_tree(self):
        """ÙÙ„ØªØ±Ø© Ø´Ø¬Ø±Ø© Ø§Ù„Ø¥Ù†Ø°Ø§Ø±Ø§Øª"""
        # Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† ÙˆØ¬ÙˆØ¯ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª
        if not hasattr(self, 'all_alerts_data') or not self.all_alerts_data:
            return

